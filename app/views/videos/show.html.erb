<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col m3">
	 <div class="collection">
       <% @videos.each do |video| %>
       	<%= link_to video.title, video, :class => 'collection-item' %>
       <% end %>
      </div>
    </div>
    <div class="col m9">
    	<div class="card blue-grey darken-1">
            <div class="card-content white-text">
           
            <div class="card-image">
              <div class="wistia_responsive_padding" style="padding:56.25% 0 28px 0;position:relative;"><div class="wistia_responsive_wrapper" style="height:100%;left:0;position:absolute;top:0;width:100%;"><div class="wistia_embed wistia_async_<%= @video.wistia %> videoFoam=true" style="height:100%;width:100%">&nbsp;</div></div></div>
            </div>  

              <span class="card-title"><%= @video.title %></span>
              <p><%= @video.description %></p>
            </div>
            <div class="card-action">
              <a href="#">Previous</a>
              <span class="right">
              	<a href="#">Next</a>
              </span>
              
            </div>
          </div>
    </div>
</div>

 <script charset="ISO-8859-1" src="//fast.wistia.com/assets/external/E-v1.js" async></script>